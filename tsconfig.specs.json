{
	"compilerOptions": {
		"baseUrl": ".",
		"listEmittedFiles": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"outDir": "build/tsc/specs",
		"paths": {
			"//assert": ["node_modules/assert"],
			"enonic-types/*": ["node_modules/enonic-types/*"],
			"/lib/explorer/*": ["src/main/typeScript/lib/explorer/*"]
		},
		"pretty": true,
		"rootDir": "src/main/resources",
		"rootDirs": [
			"src/main/resources",
			"node_modules"
		],
		"target": "esnext",
		"types": [
			"mocha",
			"node"
		]
	},
	"files": [
		"src/main/typeScript/lib/explorer/constants.ts",
		"src/main/typeScript/globals.d.ts"
	],
	"include": [
		"src/main/typeScript/**/*.spec.ts"
	]
}
