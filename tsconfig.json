{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"allowJs": true,
		"baseUrl": "./",
		"checkJs": false,
		"declaration": false,
		"declarationMap": false,
		"downlevelIteration": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"importHelpers": true,
		"importsNotUsedAsValues": "remove",
		"inlineSourceMap": false,
		"inlineSources": false,
		"jsx": "react-jsx",
		"listEmittedFiles": false,
		"listFiles": false,
		"module": "es6",
		"moduleResolution": "node",
		"noEmitOnError": false,
		"noErrorTruncation": true,
		"noImplicitAny": false,
		"noPropertyAccessFromIndexSignature": true,
		"noUncheckedIndexedAccess": true,
		"noUnusedLocals": false,
		"noUnusedParameters": true,
		"outDir": "build/rollup",
		"paths": {
			// Development (should be commented out when commiting)
			"@enonic/js-utils": ["../enonic-js-utils/src"], // Use this or npm link ../enonic-js-utils
			"@enonic/js-utils/*": ["../enonic-js-utils/*"],
			// Production (should be commented in when commiting)
			// "@enonic/js-utils": ["node_modules/@enonic/js-utils/dist/cjs"],
			// "@enonic/semantic-ui-react-form": ["../semantic-ui-react-form/src"],
			"/lib/explorer/*": ["src/main/resources/lib/explorer/*"],
			"/lib/xp/node": ["node_modules/@enonic-types/lib-node"],
			"/lib/xp/repo": ["node_modules/@enonic-types/lib-repo"]
		},
		"preserveWatchOutput": false,
		"pretty": true,
		"removeComments": true,
		"resolveJsonModule": true,
		"rootDir": "../",
		"rootDirs": [
			"src/main/resources",
			"node_modules",
			"../enonic-js-utils/src",
			"test"
		],
		"sourceMap": false,
		"strict": false,
		"strictFunctionTypes": false,
		"strictNullChecks": false,
		"target": "es5",
		"typeRoots": [
			"src/main/resources/lib/@types",
			"node_modules/@types",
			"node_modules/@enonic-types",
		],
		"types": [
			"@enonic-types/global",
			"@enonic-types/lib-node",
			"@enonic-types/lib-repo",
			"mocha",
			"node",
			"q-i",
			"react",
			"traverse"
		]
	},
	"exclude": [
		"../enonic-js-utils/**/*",
		"build/**/*",
		"node_modules/**/*"
	],
	"files": [
		"src/main/resources/index.d.ts",
		"src/main/resources/lib/explorer/index.ts",
		"src/main/resources/lib/explorer/_uncoupled/index.ts"
	],
	"include": [
		"src/main/resources/**/*.ts",
		"src/main/resources/**/*.es",
		// "test/**/*.ts"
  ]
}
