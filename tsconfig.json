{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"allowJs": true,
		"baseUrl": "./",
		"declaration": false,
		"declarationMap": false,
		"downlevelIteration": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"importHelpers": true,
		"importsNotUsedAsValues": "remove",
		"inlineSourceMap": false,
		"inlineSources": false,
		"listEmittedFiles": false,
		"listFiles": false,
		"module": "es6",
		"moduleResolution": "node",
		"noEmitOnError": false,
		"noErrorTruncation": true,
		"noImplicitAny": false,
		"noPropertyAccessFromIndexSignature": true,
		"noUncheckedIndexedAccess": true,
		"noUnusedLocals": false,
		"noUnusedParameters": true,
		"outDir": "build/rollup",
		"paths": {
			//"@enonic/js-utils": ["node_modules/@enonic/js-utils/src"],
			"@enonic/js-utils": ["../enonic-js-utils/src"],
			"/lib/explorer/*": ["src/main/resources/lib/explorer/*"]
		},
		"preserveWatchOutput": false,
		"pretty": true,
		"removeComments": true,
		"resolveJsonModule": true,
		"rootDir": "../",
		"rootDirs": [
			"src/main/resources",
			"node_modules",
			"../enonic-js-utils/src",
			"test"
		],
		"sourceMap": false,
		"strict": false,
		"strictFunctionTypes": false,
		"strictNullChecks": false,
		"target": "es5",
		"types": [
			"mocha",
			"node",
			"traverse"
		]
	},
	"exclude": [
		"../enonic-js-utils/**/*",
		"build/**/*",
		"node_modules/**/*"
	],
	"files": [
		"src/main/resources/index.d.ts",
		"src/main/resources/lib/explorer/index.ts",
		"src/main/resources/lib/explorer/_uncoupled/index.ts"
	],
	"include": [
		"src/main/resources/**/*.ts",
		"src/main/resources/**/*.es",
		//"test/**/*.ts"
  ]
}
