{
	"compilerOptions": {
		"allowJs": false,
		"baseUrl": "./",
		"declaration": false,
		"declarationMap": false,
		"downlevelIteration": true,
		"experimentalDecorators": true,
		"importHelpers": true,
		"importsNotUsedAsValues": "remove",
		"inlineSourceMap": false,
		"inlineSources": false,
		"listEmittedFiles": true,
		"listFiles": false,
		"module": "commonjs",
		"moduleResolution": "node",
		"noEmitOnError": false,
		"noErrorTruncation": true,
		"noImplicitAny": false,
		"noPropertyAccessFromIndexSignature": true,
		"noUncheckedIndexedAccess": true,
		"noUnusedLocals": false,
		"noUnusedParameters": true,
		"outDir": "build/tsc",
		"paths": {
			"@enonic/js-utils": ["node_modules/@enonic/js-utils/src"],
			"enonic-types/*": ["node_modules/enonic-types/*"],
			"/lib/explorer/*": ["src/main/resources/lib/explorer/*"]
		},
		"preserveWatchOutput": false,
		"pretty": true,
		"removeComments": true,
		"resolveJsonModule": true,
		"rootDir": "src/main/resources",
		"rootDirs": [
			"src/main/resources",
			"node_modules",
			"test"
		],
		"sourceMap": false,
		"strict": false,
		"strictFunctionTypes": false,
		"strictNullChecks": false,
		"target": "esnext",
		"types": [
			"enonic-types",
			"mocha",
			"node"
		]
	},
	"exclude": [
		"src/main/resources/**/*.spec.ts",
		"build",
		"node_modules"
	],
	"files": [
		"src/main/resources/lib/explorer/constants.ts",
		"src/main/resources/lib/explorer/document/cleanData.ts",
		"src/main/resources/lib/xp/globals.d.ts"
	],
	"include": [
      "src/main/resources/**/*.ts"
  ]
}
